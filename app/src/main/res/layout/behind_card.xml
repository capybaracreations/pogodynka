<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:autofit="http://schemas.android.com/tools">

        <android.support.v7.widget.CardView
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="10dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <LinearLayout
                            android:paddingRight="9dp"
                            android:paddingLeft="9dp"
                            android:layout_weight="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <me.grantland.widget.AutofitTextView
                                android:textColor="@color/cardTitleText"
                                android:paddingLeft="9dp"
                                android:textSize="26sp"
                                autofit:minTextSize="8sp"
                                android:text="Szczecin"
                                android:id="@+id/behindCityNameTextView"
                                android:gravity="left|center_vertical"
                                android:singleLine="true"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <Space
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                                <Space
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                                <ImageView
                                    android:layout_weight="1"
                                    android:id="@+id/refreshButton"
                                    android:tint="@color/leftIcon"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/refresh"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                                <Space
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                                <ImageView
                                    android:layout_weight="1"
                                    android:id="@+id/deleteButton"
                                    android:tint="@color/rightIcon"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/trash"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:visibility="gone"
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="9dp"
                            android:background="#000"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>

                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                        <LinearLayout
                                            android:id="@+id/firstWeatherCell"
                                            android:orientation="vertical"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <me.grantland.widget.AutofitTextView
                                                android:textColor="@color/dayTextColor"
                                                android:id="@+id/behindFirstCellDay"
                                                android:textSize="26sp"
                                                autofit:minTextSize="8sp"
                                                android:text="MON"
                                                android:gravity="bottom|center_horizontal"
                                                android:singleLine="true"
                                                android:layout_weight="9"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent" />
                                            <me.grantland.widget.AutofitTextView
                                                android:textStyle="italic"
                                                android:id="@+id/behindFirstCellDate"
                                                android:textSize="16sp"
                                                autofit:minTextSize="8sp"
                                                android:text="01.07"
                                                android:gravity="top|center_horizontal"
                                                android:singleLine="true"
                                                android:layout_weight="9"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent" />
                                        </LinearLayout>
                                        <View
                                            android:visibility="gone"
                                            android:layout_marginBottom="9dp"
                                            android:background="#000"
                                            android:layout_width="0.5dp"
                                            android:layout_height="match_parent"/>
                                        <LinearLayout
                                            android:id="@+id/secondWeatherCell"
                                            android:orientation="vertical"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <me.grantland.widget.AutofitTextView
                                                android:textColor="@color/dayTextColor"
                                                android:id="@+id/behindSecondCellDay"
                                                android:textSize="26sp"
                                                autofit:minTextSize="8sp"
                                                android:text="TUE"
                                                android:gravity="bottom|center_horizontal"
                                                android:singleLine="true"
                                                android:layout_weight="9"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent" />
                                            <me.grantland.widget.AutofitTextView
                                                android:textStyle="italic"
                                                android:id="@+id/behindSecondCellDate"
                                                android:textSize="16sp"
                                                autofit:minTextSize="8sp"
                                                android:text="02.07"
                                                android:gravity="top|center_horizontal"
                                                android:singleLine="true"
                                                android:layout_weight="9"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent" />
                                        </LinearLayout>
                                        <View
                                            android:visibility="gone"
                                            android:layout_marginBottom="9dp"
                                            android:background="#000"
                                            android:layout_width="0.5dp"
                                            android:layout_height="match_parent"/>
                                        <LinearLayout
                                            android:id="@+id/thirdWeatherCell"
                                            android:orientation="vertical"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <me.grantland.widget.AutofitTextView
                                                android:textColor="@color/dayTextColor"
                                                android:id="@+id/behindThirdCellDay"
                                                android:textSize="26sp"
                                                autofit:minTextSize="8sp"
                                                android:text="WED"
                                                android:gravity="bottom|center_horizontal"
                                                android:singleLine="true"
                                                android:layout_weight="9"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent" />
                                            <me.grantland.widget.AutofitTextView
                                                android:textStyle="italic"
                                                android:id="@+id/behindThirdCellDate"
                                                android:textSize="16sp"
                                                autofit:minTextSize="8sp"
                                                android:text="03.07"
                                                android:gravity="top|center_horizontal"
                                                android:singleLine="true"
                                                android:layout_weight="9"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent" />
                                        </LinearLayout>
                                </LinearLayout>
                        </LinearLayout>
                </LinearLayout>


        </android.support.v7.widget.CardView>


</FrameLayout>
