<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <!-- this view reveals when swipe right -->
    <RelativeLayout
        android:tag="reveal-right"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:tint="@color/leftIcon"
            android:src="@drawable/refresh"/>
    </RelativeLayout>


    <!-- this view reveals when swipe left -->
    <RelativeLayout
        android:tag="reveal-left"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:tint="@color/rightIcon"
            android:src="@drawable/trash"/>
    </RelativeLayout>


    <!-- this is the item front view -->
    <RelativeLayout
        android:tag="front"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="30sp"
                        android:text="Szczecin"
                        android:id="@+id/cityNameTextView"
                        android:gravity="center_vertical"
                        android:background="#0ff"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textSize="36sp"
                        android:text="24C"
                        android:id="@+id/currentTemperatureTextView"
                        android:gravity="center"
                        android:background="#f0f"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/firstWeatherCell"
                            android:background="#ff0"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:textSize="36sp"
                                android:text="24C"
                                android:id="@+id/firstWeatherCellTemperature"
                                android:gravity="center"
                                android:background="#0ff"
                                android:layout_weight="5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <TextView
                                android:text="Monday"
                                android:id="@+id/firstWeatherCellDay"
                                android:gravity="center"
                                android:background="#f0f"
                                android:layout_weight="9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <TextView
                                android:text="01.07.2016"
                                android:id="@+id/firstWeatherCellDate"
                                android:gravity="center"
                                android:background="#ff0"
                                android:layout_weight="9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/secondWeatherCell"
                            android:background="#ff0"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:textSize="36sp"
                                android:text="24C"
                                android:id="@+id/secondWeatherCellTemperature"
                                android:gravity="center"
                                android:background="#0ff"
                                android:layout_weight="5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <TextView
                                android:text="Tuesday"
                                android:id="@+id/secondWeatherCellDay"
                                android:gravity="center"
                                android:background="#f0f"
                                android:layout_weight="9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <TextView
                                android:text="02.07.2016"
                                android:id="@+id/secondWeatherCellDate"
                                android:gravity="center"
                                android:background="#ff0"
                                android:layout_weight="9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/thirdWeatherCell"
                            android:background="#ff0"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:textSize="36sp"
                                android:text="24C"
                                android:id="@+id/thirdWeatherCellTemperature"
                                android:gravity="center"
                                android:background="#0ff"
                                android:layout_weight="5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <TextView
                                android:text="Wednesday"
                                android:id="@+id/thirdWeatherCellDay"
                                android:gravity="center"
                                android:background="#f0f"
                                android:layout_weight="9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <TextView
                                android:text="03.07.2016"
                                android:id="@+id/thirdWeatherCellDate"
                                android:gravity="center"
                                android:background="#ff0"
                                android:layout_weight="9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>
    </RelativeLayout>


</FrameLayout>
